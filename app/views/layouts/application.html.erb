<!DOCTYPE html>
<html>
<head>
  <title>Rig Pirate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<!--This is for the navigation bar -->
	<div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "Rigpirate" , statuses_path , class: "navbar-brand" %>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <% if user_signed_in? %>
            <li class="active"><%= link_to "Status" , feed_path %></li>
            <% end %>
            <li><a href="#about">About</a></li>          
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%=link_to current_user.full_name, edit_user_registration_path %></li>

              <li><%=link_to "Log Out", logout_path %></li>
            <% else %>
              <li><%=link_to "Sign up", register_path %></li>
               <li><%=link_to "Login", login_path %></li>
            <% end %>


            
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    <!--This is the end for the navigation bar -->



<div class="container" id="aletz">

  <% flash.each do |type, message| %>
    <div class="alert <%= flash_class type %>">
      <button class="close" data-dismiss="alert">x</button>
      <%= message %>
    </div>

  <% end %>

<%= yield %>

</div>


</body>
</html>
