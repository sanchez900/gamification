<div class="page-header">
  <h1>List of statuses</h1>
</div>

<%= link_to "Post New Status", new_status_path, class: "btn btn-success" %>

<% @statuses.each do |status| %>
<div class="status">
  <strong>name:<%= status.user.full_name %></strong>
  <p><%= status.content %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(status.created_at) + " ago   " , status %>
    <span class="admin"> |
      <%= link_to "Edit" , edit_status_path(status) %> |
      <%= link_to "Delete" , status , method: :Delete, data: {confirm: "Are you sure you want to delete"} %>
    </span>

  </div>


</div>
<%end%>